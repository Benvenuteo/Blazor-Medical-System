@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="@Color" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance DialogInstance { get; set; } = default!;

    [Parameter] public string ContentText { get; set; } = "Czy na pewno?";
    [Parameter] public string ButtonText { get; set; } = "OK";
    [Parameter] public Color Color { get; set; } = Color.Primary;

    private void Submit() => DialogInstance.Close(DialogResult.Ok(true));
    private void Cancel() => DialogInstance.Cancel();
}
